\begin<<5844>>equation<<5844>>
  <<5845>>\begin<<17012>>tex2html_deferred<<17012>>\bf\end<<17013>>tex2html_deferred<<17013>>F<<5845>>(<<5846>>\begin<<17014>>tex2html_deferred<<17014>>\bf\end<<17015>>tex2html_deferred<<17015>>x<<5846>>,<<5847>>\begin<<17016>>tex2html_deferred<<17016>>\bf\end<<17017>>tex2html_deferred<<17017>>\lambda<<5847>>,<<5848>>\begin<<17018>>tex2html_deferred<<17018>>\bf\end<<17019>>tex2html_deferred<<17019>>\mu<<5848>>)=\left[ \begin<<5849>>array<<5849>><<5850>>c<<5850>>
