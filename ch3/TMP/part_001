    \end<<5958>>array<<5958>>\right]
  =\left[\begin<<5959>>array<<5959>><<5960>>ccc<<5960>>
      <<5961>>\begin<<17166>>tex2html_deferred<<17166>>\bf\end<<17167>>tex2html_deferred<<17167>>W<<5961>>(<<5962>>\begin<<17168>>tex2html_deferred<<17168>>\bf\end<<17169>>tex2html_deferred<<17169>>x<<5962>>_n) ;SPMamp; <<5963>>\begin<<17170>>tex2html_deferred<<17170>>\bf\end<<17171>>tex2html_deferred<<17171>>J<<5963>>^T_<<5964>>\begin<<17172>>tex2html_deferred<<17172>>\bf\end<<17173>>tex2html_deferred<<17173>>h<<5964>>(<<5965>>\begin<<17174>>tex2html_deferred<<17174>>\bf\end<<17175>>tex2html_deferred<<17175>>x<<5965>>_n) ;SPMamp; -<<5966>>\begin<<17176>>tex2html_deferred<<17176>>\bf\end<<17177>>tex2html_deferred<<17177>>I<<5966>>\\ 
