  \left[\begin<<6087>>array<<6087>><<6088>>c<<6088>>
      \delta<<6089>>\begin<<17364>>tex2html_deferred<<17364>>\bf\end<<17365>>tex2html_deferred<<17365>>x<<6089>>\\ \delta<<6090>>\begin<<17366>>tex2html_deferred<<17366>>\bf\end<<17367>>tex2html_deferred<<17367>>\lambda<<6090>>\end<<6091>>array<<6091>>\right]
