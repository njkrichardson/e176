\begin<<6072>>equation<<6072>>
  \left[\begin<<6073>>array<<6073>><<6074>>ccc<<6074>>
      <<6075>>\begin<<17344>>tex2html_deferred<<17344>>\bf\end<<17345>>tex2html_deferred<<17345>>W<<6075>>+<<6076>>\begin<<17346>>tex2html_deferred<<17346>>\bf\end<<17347>>tex2html_deferred<<17347>>X<<6076>>^<<6077>>-1<<6077>><<6078>>\begin<<17348>>tex2html_deferred<<17348>>\bf\end<<17349>>tex2html_deferred<<17349>>M<<6078>> ;SPMamp; <<6079>>\begin<<17350>>tex2html_deferred<<17350>>\bf\end<<17351>>tex2html_deferred<<17351>>J<<6079>>^T_<<6080>>\begin<<17352>>tex2html_deferred<<17352>>\bf\end<<17353>>tex2html_deferred<<17353>>h<<6080>>(<<6081>>\begin<<17354>>tex2html_deferred<<17354>>\bf\end<<17355>>tex2html_deferred<<17355>>x<<6081>>)\\ 
