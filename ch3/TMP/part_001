  =\left[\begin<<5930>>array<<5930>><<5931>>c<<5931>><<5932>>\begin<<17130>>tex2html_deferred<<17130>>\bf\end<<17131>>tex2html_deferred<<17131>>x<<5932>>_n\\ <<5933>>\begin<<17132>>tex2html_deferred<<17132>>\bf\end<<17133>>tex2html_deferred<<17133>>\lambda<<5933>>_n\\ 
      <<5934>>\begin<<17134>>tex2html_deferred<<17134>>\bf\end<<17135>>tex2html_deferred<<17135>>\mu<<5934>>_n\end<<5935>>array<<5935>>\right]
  +\alpha\left[\begin<<5936>>array<<5936>><<5937>>c<<5937>>\delta<<5938>>\begin<<17136>>tex2html_deferred<<17136>>\bf\end<<17137>>tex2html_deferred<<17137>>x<<5938>>_n\\ \delta<<5939>>\begin<<17138>>tex2html_deferred<<17138>>\bf\end<<17139>>tex2html_deferred<<17139>>\lambda<<5939>>_n\\ 
